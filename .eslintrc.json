{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 11,
    "sourceType": "module"
  },
  "ignorePatterns": [
    "/dist", "/fixtures"
  ],
  "rules": {
    "no-param-reassign": ["error", {
      "props": true
    }],
    "indent": [
      "error",
      "tab"
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "off"
    ],
    "semi": [
      "error",
      "always"
    ]
  },
  "overrides": [
    {
      "files": [
        "*.test.js"
      ],
      "env": {
        "jest": true
      },
      "plugins": [
        "no-only-tests"
      ],
      "rules": {
        "no-only-tests/no-only-tests": "error"
      }
    }
  ]
}